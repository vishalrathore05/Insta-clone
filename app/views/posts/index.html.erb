<style>
  .center {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 50%;
    }
</style>
<div class="container mx-auto  center" style="padding-top: 100px;">
  <div class="row py-4">
    <% @posts.each do |post| %>
      <div class="col-md-12 py-4">
        <div class="card" >
          <p class="py-1">
          <strong> 
              <img src="<%= asset_url 'goku.jpg' %>" width="150" class=" dropdown-toggle" style="height: 40px; width: 40px; border-width: 50%; border-radius: 50%;"" href="#" role="button"
                id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> 
           </strong>
          <span class="main-tbl-td"><%= @profiles.name %></span>
        </p>
          <div id="<%= dom_id post %>">
            <% if post.present? && post.image.present? %>
              <%= image_tag url_for(post.image), class: "card-img-top", style: "height: 400px; " %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <strong>Title:</strong>
                <%= post.title %>
              </h5>
              <p class="card-text">
                <strong>Description:</strong>
                <%= post.description %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>